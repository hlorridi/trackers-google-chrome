{
  "manifest_version": 2,

  "name": "Trackers Tracked (alpha)",
  "description": "List who's tracking you",
  "version": "0.9.1",
  "background": {
    "scripts": [
      "functions.js",
      "storage.js",
      "companies.js",
      "tabs.js",
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title" : "List who's tracking you on this page"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "functions.js",
        "storage.js",
        "companies.js",
        "tabs.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "cookies",
    "storage",
    "tabs",
    "alarms",
    "*://*/*"
  ]
}